<%
/*///////////////////////////////////////////////////////////////////////////

  各種パスの設定 : このエリアはどのテンプレートでも共通です ※編集しないでください

///////////////////////////////////////////////////////////////////////////*/
filename = filename.replace(/\\/g, '/');
ABSOLUTE_PATH = filename.split(config.develop_dir)[filename.split(config.develop_dir).length - 1];
RELATIVE_PATH = '../'.repeat([ABSOLUTE_PATH.split('/').length - 2]);
INCLUDE_PATH = RELATIVE_PATH + 'include/';

include(INCLUDE_PATH + 'tool/_path');
include(INCLUDE_PATH + 'tool/_functions');
/*///////////////////////////////////////////////////////////////////////////

  ここまで編集不可エリア

///////////////////////////////////////////////////////////////////////////*/

/* Local Variables
   ----------------------------------------------------------------- */
// ページ名の設定
const page_name = 'home';

// imgディレクトリへの相対パス
const img_path = assetsRelative() + 'img';
-%>

<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="format-detection" content="telephone=no">

  <link rel="shortcut icon" href="<%= img_path; %>/common/favicon.ico">

  <title><%= info[page_name].title; %></title>

  <meta name="description" content="<%= info[page_name].description; %>">
  <meta name="keywords" content="<%= info[page_name].keywords; %>">

  <!-- meta for sns -->
  <meta property="og:title" content="<%= info[page_name].title; %>" />
  <meta property="og:type" content="article" />
  <meta property="og:url" content="<%= info[page_name].url; %>" />
  <meta property="og:image" content="<%= info[page_name].ogp_image; %>" />
  <meta property="og:site_name" content="<%= config.site_name; %>" />
  <meta property="og:description" content="<%= info[page_name].description; %>" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="<%= info[page_name].title; %>" />
  <meta name="twitter:image" content="<%= info[page_name].ogp_image; %>" />
  <meta name="twitter:description" content="<%= info[page_name].description; %>" />

  <!-- local CSS -->
  <%- include(INCLUDE_PATH + 'foundation/_styles', { css_path: assetsRelative() + 'css' }); -%>

  <!-- adobe font -->
  <script>
    (function(d) {
      var config = {
        kitId: 'hzf0fzc',
        scriptTimeout: 3000,
        async: true
      },
      h=d.documentElement,t=setTimeout(function(){h.className=h.className.replace(/\bwf-loading\b/g,"")+" wf-inactive";},config.scriptTimeout),tk=d.createElement("script"),f=false,s=d.getElementsByTagName("script")[0],a;h.className+=" wf-loading";tk.src='https://use.typekit.net/'+config.kitId+'.js';tk.async=true;tk.onload=tk.onreadystatechange=function(){a=this.readyState;if(f||a&&a!="complete"&&a!="loaded")return;f=true;clearTimeout(t);try{Typekit.load(config)}catch(e){}};s.parentNode.insertBefore(tk,s)
    })(document);
  </script>

</head>

<body id="<%= page_name; %>">

<%# start page content -%>

<!-- header -->
<%- include(INCLUDE_PATH + 'layout/_header'); _%>

<main>
<!-- key visual -->
<%- include(INCLUDE_PATH + 'object/project/_key'); _%>
<%- include(INCLUDE_PATH + 'layout/_about'); _%>

</main>

<!-- footer -->
<%- include(INCLUDE_PATH + 'layout/_footer'); _%>


<%# end page content -%>

<!-- local JS -->
<%- include(INCLUDE_PATH + 'foundation/_scripts.ejs', { js_path: assetsRelative() + 'js' }); -%>

</body>
</html>
